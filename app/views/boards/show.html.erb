<%= content_for(:heading) do %>
  <h1 class="home-title"><%= @board.name %></h1>
<% end %>

<section>
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title">22.45</h1>
        <h3>Average <strong>cards</strong> per member</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title">3.27</h1>
        <h3>Average <strong>points</strong> per member</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title">13</h1>
        <h3>Board members</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title">27</h1>
        <h3>Total cards</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Tasks / week</h3>
      <canvas id="chart-1" width="500" height="400"></canvas>
    </div>
    <div class="col-md-6">
      <h3>Points / week</h3>
      <canvas id="chart-2" width="500" height="400"></canvas>
    </div>
  </div>
</section>
