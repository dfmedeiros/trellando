<%= content_for(:heading) do %>
  <h1 class="home-title"><%= @board.name %></h1>
<% end %>

<form action="#" class="form-inline pbxl">
  <div class="row">
    <div class="col-md-2">
      <select class="form-control form-block">
        <option>- Choose an period -</option>
      </select>
    </div>
    <div class="col-md-1">
      <div class="btn btn-primary btn-block">Submit</div>
    </div>
  </div>
</form>

<section>
  <div class="row">
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title"><%= @board.average_cards_per_member %></h1>
        <h3>Average <strong>cards</strong> per member</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title">3.27</h1>
        <h3>Average <strong>points</strong> per member</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title"><%= @board.members.count %></h1>
        <h3>Board members</h3>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card">
        <h1 class="card-title"><%= @board.cards.count %></h1>
        <h3>Total cards</h3>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h3>Tasks / member</h3>
      <canvas id="chart-1" width="500" height="400"></canvas>
    </div>
    <div class="col-md-6">
      <h3>Points / member</h3>
      <canvas id="chart-2" width="500" height="400"></canvas>
    </div>
  </div>
</section>
